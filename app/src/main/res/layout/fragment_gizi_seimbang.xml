<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_abu_gradient">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_welcome"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:translationY="-40dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_welcome"
            android:contentDescription="Selamat Datang" />

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            android:text="Selamat Datang"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_giziSeimbang"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@id/cv_covid19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_welcome">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_giziSeimbang"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@color/purple_0"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_giziSeimbang"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center||bottom"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Gizi Seimbang"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_covid19"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_giziSeimbang"
        app:layout_constraintTop_toTopOf="@id/cv_giziSeimbang">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_covid19"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@color/purple_0"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_covid19"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center||bottom"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Covid-19"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_pelayananKesehatan"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@id/cv_covid19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_giziSeimbang">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_pelayananKesehatan"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@color/purple_0"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_pelayananKesehatan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center||bottom"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Pelayanan Kesehatan"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_contactPerson"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_giziSeimbang"
        app:layout_constraintTop_toTopOf="@id/cv_pelayananKesehatan">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_contactPerson"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@color/purple_0"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_contactPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center||bottom"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Contact Person Sahabat Netra"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>