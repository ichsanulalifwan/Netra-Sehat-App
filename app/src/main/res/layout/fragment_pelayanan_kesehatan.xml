<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray_purple"
    android:fitsSystemWindows="true"
    tools:context=".pelayanankesehatan.PelayananKesehatanFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_1"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:navigationIconTint="@color/white">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/title_pelayanan_kesehatan_terdekat"
                android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/white" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_rumahsakit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_rumahsakit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_hospital"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title_rumahsakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:text="@string/title_rumah_sakit"
                    android:textColor="@color/purple_0"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_next_rumahsakit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/arrow_forward_24"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_puskesmas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="@id/btn_rumahsakit"
                app:layout_constraintStart_toStartOf="@id/btn_rumahsakit"
                app:layout_constraintTop_toBottomOf="@id/btn_rumahsakit">

                <ImageView
                    android:id="@+id/icon_puskesmas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_puskesmas"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title_puskesmas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:text="@string/title_puskesmas"
                    android:textColor="@color/purple_0"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_next_puskesmas"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/arrow_forward_24"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_apotek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="@id/btn_rumahsakit"
                app:layout_constraintStart_toStartOf="@id/btn_rumahsakit"
                app:layout_constraintTop_toBottomOf="@id/btn_puskesmas">

                <ImageView
                    android:id="@+id/icon_apotek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_local_pharmacy_black_24dp"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title_apotek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:text="@string/title_apotek"
                    android:textColor="@color/purple_0"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_next_apotek"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/arrow_forward_24"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_klinik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="8dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_rumahsakit"
                app:layout_constraintStart_toStartOf="@id/btn_rumahsakit"
                app:layout_constraintTop_toBottomOf="@id/btn_apotek">

                <ImageView
                    android:id="@+id/icon_klinik"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_clinic"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title_klinik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:text="@string/title_klinik"
                    android:textColor="@color/purple_0"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_next_clinic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/arrow_forward_24"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>